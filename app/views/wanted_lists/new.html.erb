<%= form_for @wantedlist, :url => {:action => 'create'} do |f| %>

<%= f.label :name %>
<%= f.text_field :name %>
<br/>

<%= f.label :days %>
<%= f.datetime_select :days,:use_month_numbers => true%>
<br/>

<%= f.label :sex %> man
<%= f.radio_button 'sex', '0', {:checked => true} %>
woman
<%= f.radio_button 'sex', '1' %>
<br/>

<%= f.label :hair_style %>
<%= f.select :hair_style,{"long" => "long","short" =>"short"}, :prompt => "Please select" %>
<br/>



<%= f.label :price %>
<%= f.text_field :price %>
<br/>


<%= f.label :memo %>
<%= f.text_field :memo %>
<br/>




<%= f.submit "Create my list", class: "btn btn-large btn-primary" %>
<% end %>
