<h1>WantedLists#edit</h1>
<h1>Update your post</h1>

<%= form_for @wanted_list do |f| %>
	<ul>
		<li><%= f.label :name %>
		<%= f.text_field :name %></li>

		<li><%= f.label :days %>
		<%= f.text_field :days,:class => 'datepicker' %></li>

		<li><%= f.label :sex %>
		man
		<%= f.radio_button 'sex', '0', {:checked => true} %>
		woman
		<%= f.radio_button 'sex', '1' %></li>

		<li><%= f.label :hair_style %>
		<%= f.select :hair_style,{"long" => "long","short" =>"short"}, :prompt => "Please select" %></li>

		<li><%= f.label :price %>
		<%= f.text_field :price %></li>

		<li><%= f.label :memo %>
		<%= f.text_field :memo %></li>

		<li><%= f.submit "Change post!", class: "btn btn-large btn-primary" %></li>
	</ul>
<% end %>
